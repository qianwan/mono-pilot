{
  "name": "mono-pilot",
  "version": "0.2.10",
  "description": "Cursor-compatible coding agent powered by pi-mono",
  "type": "module",
  "license": "MIT",
  "bin": {
    "mono-pilot": "dist/src/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/tools && cp tools/*.md dist/tools/ && chmod +x dist/src/cli.js",
    "check": "tsc --noEmit",
    "dev": "tsx src/cli.ts",
    "dev:watch": "tsx watch src/cli.ts",
    "dev:continue": "tsx src/cli.ts --continue",
    "dev:watch:continue": "tsx watch src/cli.ts -- --continue",
    "start": "node dist/src/cli.js",
    "inspect:injection": "node scripts/inspect-injection.mjs",
    "inspect:injection:full": "node scripts/inspect-injection.mjs --full",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepack": "npm run check && npm run build"
  },
  "keywords": [
    "mono-pilot",
    "pi-mono",
    "coding-agent",
    "cursor-compatible"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qianwan/mono-pilot.git"
  },
  "bugs": {
    "url": "https://github.com/qianwan/mono-pilot/issues"
  },
  "homepage": "https://github.com/qianwan/mono-pilot#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@mariozechner/pi-agent-core": "^0.55.1",
    "@mariozechner/pi-ai": "^0.55.1",
    "@mariozechner/pi-coding-agent": "^0.55.1",
    "@mariozechner/pi-tui": "^0.55.1",
    "@sinclair/typebox": "^0.34.13",
    "glob": "^13.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
